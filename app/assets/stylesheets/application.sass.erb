//---------------
//--Colors

$color-blue: #2eb9ce
$color-black: #222
$color-white: #eee
$color-grey: #aaa
$color-dark-grey: #ccc
$color-red: #a22

//---------------
//--Dimensions

$margin: 15px

@import url('https://fonts.googleapis.com/css?family=Kanit:200|Montserrat:900')

@import font-awesome
@import "bootstrap-sprockets"
@import "bootstrap"
@import devise_bootstrap_views



body
	background: $color-black
	color: $color-white


.footer
	width: 100%
	background: $color-black
	color: $color-grey
	padding: 15px
	margin: 0
	margin-top: 20px
	text-align: center

.footer-image
	position: absolute
	top: -100px
	left: 0
	width: 100%
	max-width: 285px

.row
	margin: 0

.col-footer
	min-height: 150px

.box
	position: relative
	width: 100%

.navbar
	margin: 0
	width: 100%
	box-shadow: 0 2px 3px rgba(0,0,0,.3)


.header
	background-image: url(<%= asset_path 'header.png' %>)
	background-size: cover
	background-position: center
	background-repeat: no-repeat
	width: 100%
	height: 300px

.app
	position: absolute
	top: 250px
	width: 100%


.main-panel
	width: 100%
	position: relative
	margin: 0
	background: $color-red
	padding: $margin
	padding-bottom: 100px
	border-radius: $margin
	box-shadow: 0 2px 3px rgba(0,0,0,.3)


.btn
	display: inline-block
	margin: 10px
