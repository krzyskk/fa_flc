//---------------
//--Colors

$color-blue: #2eb9ce
$color-black: #222
$color-white: #eee
$color-grey: #aaa
$color-dark-grey: #ccc
$color-green: #142
$color-dark-green: #021

//---------------
//--Dimensions

$margin: 15px

@import url('https://fonts.googleapis.com/css?family=Kanit:200|Montserrat:900')
@import font-awesome
@import "bootstrap-sprockets"
@import "bootstrap"
@import devise_bootstrap_views

body
	background: $color-black

p
	color: $color-white

table
	width: 100%
	color: $color-white
	th
		background: darken($color-green, 2%)
	tr:nth-of-type(odd)
		background: lighten($color-green, 3%)


.footer-image
	position: absolute
	top: -100px
	left: 0
	width: 100%
	max-width: 285px

.row
	margin: 0

.navbar
	margin: 0
	padding: 8px
	width: 100%
	box-shadow: 0 2px 3px rgba(0,0,0,.3)
	h1
		margin: 0
		font-family: 'Questrial', sans-serif
		font-size: 32px
		color: $color-grey
		strong
			color: $color-white

.header
	padding: 30px
	background-image: url(<%= asset_path 'header.png' %>)
	background-size: cover
	background-position: center top
	background-repeat: no-repeat
	width: 100%
	height: 300px
	h1
		color: $color-dark-green
		text-shadow: 3px 3px 5px $color-white
		font-weight: bold
		font-size: 48px

.app
	position: absolute
	top: 300px
	width: 100%

.panel
	width: 100%
	position: relative
	margin: 0
	background: $color-green
	padding: $margin
	padding-bottom: 100px
	border-radius: $margin
	box-shadow: 0 2px 3px rgba(0,0,0,.3)

.main-panel
	width: 100%

form
	.control-label
		color: $color-white

	textarea
		width: 100%
		resize: none
