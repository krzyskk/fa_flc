//---------------
//--Dimensions

$margin: 15px

@import url('https://fonts.googleapis.com/css?family=Kanit:200|Montserrat:900')
@import "font-awesome-sprockets"
@import "font-awesome"
@import "bootstrap-sprockets"
@import "bootstrap"
@import devise_bootstrap_views
@import "/\*"


body
	background: $color-black

p
	color: $color-white



.decks
	width: 100%
	color: $color-white
	padding: 0
	margin: 0
	list-style: none
	li
		padding: 15px
		margin: 0 0 15px 0
		box-shadow: 0 2px 3px rgba(0,0,0,.1)
		border-left: 5px solid $color-blue
		border-radius: 5px
		background: lighten($color-green, 3%)
		display: flex
		flex-wrap: wrap
		justify-content: space-between
		&:nth-of-type(odd)
			background: lighten($color-green, 5%)
		&:hover
			background: lighten($color-green, 7%)

.description
	display: block
	width: 50%

.info
	display: block
.buttons
	overflow: initial

.row
	margin: 0
	width: 100%

.navbar
	margin: 0
	padding: 8px
	width: 100%
	box-shadow: 0 2px 3px rgba(0,0,0,.3)
	h1
		margin: 0
		font-family: 'Questrial', sans-serif
		font-size: 32px
		color: $color-grey
		strong
			color: $color-white

.header
	padding: 30px
	background-image: url(<%= asset_path 'header.png' %>)
	background-size: cover
	background-position: center top
	background-repeat: no-repeat
	width: 100%
	height: 300px
	h1
		color: $color-dark-green
		text-shadow: 3px 3px 5px $color-white
		font-weight: bold
		font-size: 48px

.app
	position: absolute
	top: 300px
	width: 100%

.panel
	width: 100%
	position: relative
	margin: 0
	background: $color-green
	padding: $margin
	border-radius: $margin

.main-panel
	width: 100%

.correct
	color: #0F0

.wrong
	color: #F30

.empty
	color: #0FF

form
	.control-label
		color: $color-white

	textarea
		width: 100%
		resize: none

.deck-name
	display: block
	font-weight: bold
	font-size: 1.5em
	color: $color-blue
	&:hover
		text-decoration: none
		color: lighten($color-blue, 25%)




//------------------------
//table

.table
	display: flex
	flex-flow: column nowrap
	justify-content: space-between
	width: 100%
	color: $color-white

	&-header
		display: none
		font-weight: 1.5em
		background: darken($color-green, 3%)

	&-row
		width: 100%
		border-left: 5px solid $color-blue
		display: flex
		flex-flow: row nowrap
		justify-content: space-between
		padding: $margin
		margin-bottom: $margin*0.3

		&:nth-of-type(even)
			background: lighten($color-green, 3%)
		&:nth-of-type(odd)
			background: lighten($color-green, 5%)

	&-item
		flex-grow: 1
		width: 12%
