//---------------
//--Dimensions

$margin: 15px

@import url('https://fonts.googleapis.com/css?family=Kanit:200|Montserrat:900')
@import "font-awesome-sprockets"
@import "font-awesome"
@import "bootstrap-sprockets"
@import "bootstrap"
@import devise_bootstrap_views
@import "/\*"


body
	background: $color-primary-0

p
	color: $color-primary-3

.description
	display: block
	width: 50%

.info
	display: block

.buttons
	overflow: initial

.row
	margin: 0
	width: 100%

.navbar
	margin: 0
	padding: 8px
	width: 100%
	box-shadow: 0 2px 3px rgba(0,0,0,.3)
	h1
		margin: 0
		font-family: 'Questrial', sans-serif
		font-size: 32px
		color: $color-secondary-1-2
		strong
			color: $color-secondary-2-2

.header
	padding: 30px
	background-image: url(<%= asset_path 'header.png' %>)
	background-size: cover
	background-position: center top
	background-repeat: no-repeat
	width: 100%
	height: 300px
	h1
		color: $color-secondary-2-1
		text-shadow: 3px 3px 5px $color-secondary-2-3
		font-weight: bold
		font-size: 48px
	h3
		color: $color-secondary-1-2
		text-shadow: 2px 2px 4px $color-primary-0


.app
	position: absolute
	top: 300px
	width: 100%

.panel
	width: 100%
	position: relative
	margin: 0
	border: none
	background: linear-gradient(90deg, $color-primary-1, $color-primary-3, lighten($color-primary-0, 2%))
	padding: $margin
	border-radius: $margin

.main-panel
	width: 100%

.correct
	color: #0F0

.wrong
	color: #F30

.empty
	color: #0FF

.new-card
	background: lighten($color-primary-2, 15%)
	margin: $margin 0
	padding: $margin

.progress-box
	display: flex
	flex-flow: row nowrap
	justify-content: space-around

.question-box
	margin-top: $margin
	text-align: center


form
	display: flex
	flex-flow: row nowrap
	justify-content: space-between
	width: 100%
	.form-group
		flex-grow: 2
		margin: $margin
	.control-label
		color: $color-primary-2

	textarea
		width: 100%
		resize: none

.deck-name
	display: block
	font-weight: bold
	font-size: 1.5em
	color: $color-secondary-1-3
	&:hover
		text-decoration: none
		color: lighten($color-primary-2, 25%)


//------------------------
//table

.table
	list-style: none
	display: flex
	flex-flow: column nowrap
	justify-content: space-between
	width: 100%
	padding: 0
	color: $color-secondary-1-3
	a
		color: $color-secondary-1-3
		font-weight: bold
		text-decoration: none
		&:hover
			color: lighten($color-secondary-1-3, 15%)
	li
		box-shadow: 0 2px 3px rgba(0,0,0,.1)
		width: 100%
		display: flex
		flex-flow: row nowrap
		justify-content: space-between
		padding: $margin

	&-header
		font-weight: 1.5em
		background: darken($color-primary-2, 5%)
		&:hover
			background: darken($color-primary-2, 2%)

	&-row
		border-left: 5px solid $color-secondary-1-3
		margin-top: $margin*0.3
		&:nth-of-type(even)
			background: lighten($color-primary-2, 3%)
		&:nth-of-type(odd)
			background: lighten($color-primary-2, 5%)
		&:hover
			background: lighten($color-primary-2, 7%)

	&-item
		flex-grow: 1
		width: 12%

	&-edit
		margin: 0
		background: lighten($color-primary-2, 15%)
