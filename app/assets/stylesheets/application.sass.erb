//---------------
//--Dimensions

$margin: 10px
$item-margin: 7px

@import url('https://fonts.googleapis.com/css?family=Kanit:200|Montserrat:900')
@import "font-awesome-sprockets"
@import "font-awesome"
@import "bootstrap-sprockets"
@import "bootstrap"
@import devise_bootstrap_views
@import "/\*"

body
	background: $color-background
	color: $color-text

p
	color: $color-primary-3

a
	color: $color-text
	text-decoration: none
	&:hover
		color: lighten($color-text, 15%)
		text-decoration: none

.description
	display: block
	width: 50%

.info
	display: block

.buttons
	overflow: initial
	a
		margin-left: 5px

.button-container
	width: 100%
	margin-top: $margin

.row
	margin: 0
	width: 100%

.navbar
	margin: 0
	padding: 8px
	width: 100%
	box-shadow: 0 2px 3px rgba(0,0,0,.3)
	h1
		margin: 0
		font-family: 'Questrial', sans-serif
		font-size: 32px
		color: $color-secondary-1-2
		strong
			color: $color-secondary-2-2

.header
	padding: 30px
	background-image: url(<%= asset_path 'header.png' %>)
	background-size: cover
	background-position: center top
	background-repeat: no-repeat
	width: 100%
	height: 300px
	h1
		color: $color-secondary-2-1
		text-shadow: 3px 3px 5px $color-secondary-2-3
		font-weight: bold
		font-size: 48px
	h3
		color: $color-secondary-1-2
		text-shadow: 2px 2px 4px $color-background

.app
	position: absolute
	top: 300px
	width: 100%

.panel
	width: 100%
	position: relative
	margin: 0
	border: none
	background: $color-primary-3
	padding: $margin

.main-panel
	width: 100%

.correct
	color: #0F0

.wrong
	color: #F30

.empty
	color: #0FF

.new-card
	background: lighten($color-primary-2, 15%)
	margin: $margin 0
	padding: $margin

#progress-box
	display: flex
	flex-flow: row nowrap
	justify-content: space-around

.progress-item
	width: 22%

.question-box
	margin-top: $margin
	text-align: center

#answer-box
	margin-bottom: 0

.form-actions
	display: block
	position: relative

form
	width: 100%
	.form-group
		margin: $margin
	.control-label
		color: $color-primary-2

	textarea
		width: 100%
		resize: none

.deck-name
	display: block
	font-weight: bold
	font-size: 1.5em
	min-width: 1.5em
	min-height: 1.5em
	color: $color-text
	&:hover
		text-decoration: none
		color: lighten($color-primary-2, 25%)

//------------------------
//Panel
.box
	display: block
	background: $color-background
	margin-bottom: $margin
	padding: $margin
	box-shadow: 0 2px 3px rgba(0,0,0,.1)

//------------------------
//table

.table
	list-style: none
	display: flex
	flex-flow: column nowrap
	justify-content: space-between
	width: 100%
	padding: 0
	a
		font-weight: bold
		color: $color-text
		text-decoration: none


	li
		box-shadow: 0 2px 3px rgba(0,0,0,.1)
		width: 100%

		justify-content: space-between
		padding: $item-margin

	&-header
		display: flex
		flex-flow: row nowrap
		font-weight: 1.5em
		background: $color-background

	&-row
		display: flex
		flex-flow: row nowrap
		border-left: 5px solid $color-text
		margin-top: $margin*0.3
		&:nth-of-type(even)
			background: lighten($color-primary-2, 3%)
		&:nth-of-type(odd)
			background: lighten($color-primary-2, 5%)
		&:hover
			background: lighten($color-primary-2, 7%)

	&-item
		flex-grow: 1
		width: 12%

	&-edit
		margin: 0
		background: lighten($color-primary-2, 15%)
		.card-details
			display: flex
			list-style: none
