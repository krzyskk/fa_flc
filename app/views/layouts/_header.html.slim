.row
  .header
    .container
      .row
        .col-6
          h1= yield :header
        .col-6
          h3= yield :description

      - flash.each do |key, value|
        - h = {success: 'success', error: 'danger', notice: 'info', alert: 'info'}
        div class="alert alert-#{h[key.to_sym]}" = value
