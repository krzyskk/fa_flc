.mt-3  
  = simple_form_for(@deck, html: { multipart: true }) do |f|
    = f.error_notification

    .form-inputs
      = f.input :name

    .form-inputs
      = f.input :description

    .form-inputs
      = f.input :file, as: :file

    .form-actions
      = f.button :submit , class: 'btn btn-primary mr-2' 
      = link_to "<i class='fas fa-trash'></i>  Cancel".html_safe, decks_path, class: 'btn btn-danger'
