= simple_form_for(@day) do |f|
  = f.input :note
  = f.input :main_task
  = f.input :resolution
  - @day.results.each do |result|
    = f.fields_for(:results) do |s|
      = s.input :result do
        / = s.select(:result, Result.results.map {|k, v| [k, k]}, {}, { class: "form-control" })
        = s.input(:success, as: :boolean)


  = f.button :submit , class: 'btn btn-primary'