= content_for :header do
  Cards

%table.table
  %thead
    %tr
      %th= sort_link(@q, :front)
      %th= sort_link(@q, :back)
      %th= sort_link(@q, :created_at)
      %th= sort_link(@q, :updated_at)
      %th= sort_link(@q, :views)
      %th= sort_link(@q, :corect)
      %th= sort_link(@q, :last_showed_at)
      %th{colspan: "2"}

  %tbody
    - @cards.each do |card|
      %tr
        %td= card.front_truncated
        %td= card.back_truncated
        %td= card.created_date
        %td= card.updated_date
        %td= card.showed
        %td= card.corect
        %td= card.last_showed_date
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_card_path(card), class: 'btn btn-default btn-xs'
        %td
          = link_to t('.destroy', default: t("helpers.links.destroy")), card_path(card), class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }


%br

= link_to t('.new', default: t("helpers.links.new")), new_card_path, class: 'btn btn-primary'
